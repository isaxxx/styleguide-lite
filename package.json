{
  "name": "styleguide-lite",
  "version": "1.1.4",
  "description": "Simple Styleguide Generator.",
  "main": "./index.js",
  "bin": {
    "styleguide-lite": "./bin/styleguide-lite"
  },
  "scripts": {
    "test": "ava --verbose",
    "check": "eslint .",
    "git-ignore": "git rm -r --cached . && git add -A && git commit --allow-empty -m 'gitignore-refresh' && git reset --soft HEAD^",
    "git-commit": "git add -A && git commit",
    "git-push": "git push origin master",
    "npm-publish": "npm publish"
  },
  "keywords": [
    "styleguide"
  ],
  "engines": {
    "node": ">=6.11.4"
  },
  "author": "isaxxx",
  "repository": {
    "type": "git",
    "url": "https://github.com/isaxxx/styleguide-lite"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.1",
    "ejs": "^2.6.1",
    "fs-extra": "^6.0.0",
    "glob": "^7.1.2",
    "path": "^0.12.7",
    "remarkable": "^1.7.1",
    "update-notifier": "^2.5.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^5.3.0"
  }
}
